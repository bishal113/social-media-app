<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.uploadpic.uploadpic">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgviewid"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:background="#a9a8a8"
            android:visibility="gone"
            />
        <VideoView
            android:id="@+id/vdoviewid"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/edittextid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Something..."
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:layout_above="@+id/uploadbtn"
        android:minLines="1"
        android:maxLines="4"
        android:minHeight="31dp"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/gpslocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:minLines="1"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:hint="Address(Locality, City, State)"
            android:minHeight="31dp"/>
        <ImageButton
            android:id="@+id/gpsbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_weight="8"
            android:src="@drawable/gps"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp">

        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnshape"
            android:text="cancel"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginRight="95dp"
            />
        <Button
            android:id="@+id/uploadbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/btnshape"
            />


    </LinearLayout>

</LinearLayout>
